<% 175.times do |i| %>
---
apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: test-deployment-<%= i %>
spec:
  replicas: 1
  progressDeadlineSeconds: 60
  template:
    metadata:
      labels:
        app: test-deployment-<%= i %>
    spec:
      containers:
      - name: app
        image: busybox
        imagePullPolicy: IfNotPresent
        command: ["tail", "-f", "/dev/null"]
        resources:
          requests:
            cpu: 200m
---
apiVersion: v1
kind: Service
metadata:
  name: service-for-<%= i %>
spec:
  selector:
    app: test-deployment-<%= i %>

<% end %>
